%%%%%%%%%% Heading Spacing %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\makeatletter
\DeclareSectionCommand[%
  style=part,%
  level=\z@,%
  tocstyle=part,%
  toclevel=\m@ne,%
  tocindent=\z@,%
  tocnumwidth=2em%
]{part}
\DeclareSectionCommand[%
  style=section,%
  level=1,%
  indent=\z@,%
  % beforeskip=-3.5ex \@plus -1ex \@minus -.2ex,%
  % afterskip=2.3ex \@plus.2ex,%
  beforeskip=-3ex \@plus -0.8ex \@minus -.24ex,%
  afterskip=0.5ex \@plus.2ex,%
  tocstyle=section,%
  tocindent=0pt,%
  tocnumwidth=1.5em%
]{section}
\DeclareSectionCommand[%
  style=section,%
  level=2,%
  indent=\z@,%
  % beforeskip=-3.25ex\@plus -1ex \@minus -.2ex,%
  % afterskip=1.5ex \@plus .2ex,%
  beforeskip=-1ex\@plus -0.5ex \@minus -.2ex,%
  afterskip=0.125ex \@plus .2ex,%
  tocstyle=subsection,%
  tocindent=1.5em,%
  tocnumwidth=2.3em%
]{subsection}
\DeclareSectionCommand[%
  style=section,%
  level=3,%
  indent=\z@,%
  % beforeskip=-3.25ex\@plus -1ex \@minus -.2ex,%
  % afterskip=1.5ex \@plus .2ex,%
  beforeskip=-0.5ex\@plus -.25ex \@minus -.2ex,%
  afterskip=0.001ex \@plus .2ex,%
  tocstyle=subsection,%
  tocindent=3.8em,%
  tocnumwidth=3.2em%
]{subsubsection}
\DeclareSectionCommand[%
  style=section,%
  level=4,%
  indent=\z@,%
  beforeskip=0.25ex \@plus.1ex \@minus.2ex,%
  afterskip=-0.5ex,%
  tocstyle=subsection,%
  tocindent=7.0em,%
  tocnumwidth=4.1em%
]{paragraph}
\DeclareSectionCommand[%
  style=section,%
  level=5,%
  indent=\scr@parindent,%
  beforeskip=0.25ex \@plus1ex \@minus .2ex,%
  afterskip=-0.5ex,%
  tocstyle=subsection,%
  tocindent=10em,%
  tocnumwidth=5em%
]{subparagraph}
\makeatother
