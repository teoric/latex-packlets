\usepackage{forloop}
\newcounter{looping}
\newcommand{\laengezeilen}[2]{
\begingroup
    \parskip=1em
    \forloop{looping}{0}{\value{looping} < #1}{%
        \par{}\rule{#2}{0.4pt}%
    }\vskip2em\endgroup}
\newcommand{\zeilen}[1]{\laengezeilen{#1}{\linewidth}}
\newcommand{\kurzzeilen}[1]{\laengezeilen{#1}{0.8\linewidth}}
